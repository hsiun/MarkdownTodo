<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 应用主题 -->
    <!-- Base application theme -->
    <!-- 修改 AppTheme 的父主题为 Material Components -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- 状态栏颜色 -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>

        <!-- 主色调 -->
        <item name="colorPrimary">#865EDC</item>
        <item name="colorPrimaryVariant">#865EDC</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- 次要色调 -->
        <item name="colorSecondary">#1A73E8</item>
        <item name="colorSecondaryVariant">#1A73E8</item>
        <item name="colorOnSecondary">@android:color/white</item>

        <!-- 背景和表面 -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorSurface">@android:color/white</item>
        <item name="colorOnSurface">@android:color/black</item>

        <!-- 错误颜色 -->
        <item name="colorError">#FF3B30</item>
        <item name="colorOnError">@android:color/white</item>
    </style>

    <!-- 工具栏样式 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextColor">#000000</item>
        <item name="subtitleTextColor">#666666</item>
        <item name="android:background">#FFFFFF</item>
    </style>

    <!-- 悬浮按钮样式 -->
    <style name="FloatingActionButtonStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#1A73E8</item>
        <item name="tint">@android:color/white</item>
        <item name="elevation">6dp</item>
        <item name="pressedTranslationZ">12dp</item>
    </style>

    <!-- 待办事项文本样式 -->
    <style name="TodoItemTextStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>