<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp">


    <!-- 新增：显示已完成待办选项 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="待办设置"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <CheckBox
        android:id="@+id/showCompletedCheckbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示已完成待办"
        android:layout_marginBottom="24dp" />
    <!-- 标题 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Git仓库设置"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- GitHub仓库地址 -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="GitHub仓库地址"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/githubRepoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:imeOptions="actionNext"
            android:hint="https://github.com/用户名/仓库名"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- GitHub Token -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:hint="GitHub个人访问令牌"
        app:endIconMode="password_toggle"
        android:layout_marginBottom="32dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/githubTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:imeOptions="actionDone"
            android:hint="ghp_xxxxxxxxxxxxxxxxxxxx"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 说明文字 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提示：在GitHub设置中生成Personal Access Token，需要勾选repo权限"
        android:textSize="12sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- 按钮区域 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end">

        <!-- 取消按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="取消"
            android:layout_marginEnd="8dp"
            app:cornerRadius="18dp"
            app:backgroundTint="#F0F0F0"
            android:textColor="#666666" />

        <!-- 保存按钮 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="保存"
            app:cornerRadius="18dp"
            app:backgroundTint="#1A73E8"
            android:textColor="#FFFFFF" />

    </LinearLayout>

</LinearLayout>