<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TabHost
        android:id="@+id/tabHost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <!-- 同步设置选项卡 -->
                <ScrollView
                    android:id="@+id/tabSync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Git同步设置"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Git仓库地址"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/githubRepoUrlInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="https://github.com/username/repo"
                            android:inputType="textUri" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Git Token"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="4dp" />

                        <EditText
                            android:id="@+id/githubTokenInput"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="输入你的Git Token"
                            android:inputType="textPassword" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DDD"
                            android:layout_marginVertical="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="同步设置"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Switch
                                android:id="@+id/autoSyncSwitch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="自动同步" />

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="同步间隔"
                            android:layout_marginTop="16dp"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.slider.Slider
                            android:id="@+id/syncIntervalSlider"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="1"
                            android:valueTo="60"
                            android:stepSize="1" />

                        <TextView
                            android:id="@+id/syncIntervalText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="5 分钟"
                            android:textAlignment="center" />

                    </LinearLayout>
                </ScrollView>

                <!-- 显示设置选项卡 -->
                <ScrollView
                    android:id="@+id/tabDisplay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="显示设置"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <CheckBox
                            android:id="@+id/showCompletedCheckbox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="显示已完成待办" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="#DDD"
                            android:layout_marginVertical="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="排序方式"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <RadioGroup
                            android:id="@+id/sortByRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RadioButton
                                android:id="@+id/sortByIdRadio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="按ID排序" />

                            <RadioButton
                                android:id="@+id/sortByTitleRadio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="按标题排序" />

                            <RadioButton
                                android:id="@+id/sortByCreatedRadio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="按创建时间排序" />

                        </RadioGroup>

                    </LinearLayout>
                </ScrollView>

                <!-- 通知设置选项卡 -->
                <ScrollView
                    android:id="@+id/tabNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="通知设置"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Switch
                                android:id="@+id/notificationSwitch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="启用通知" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="16dp">

                            <Switch
                                android:id="@+id/vibrationSwitch"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="启用震动"
                                tools:ignore="UseSwitchCompatOrMaterialXml" />

                        </LinearLayout>

                    </LinearLayout>
                </ScrollView>

                <!-- 外观设置选项卡 -->
                <ScrollView
                    android:id="@+id/tabAppearance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="8dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="外观设置"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="主题颜色" />

                        <Spinner
                            android:id="@+id/themeColorSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="颜色预览"
                            android:layout_marginTop="16dp" />

                        <View
                            android:id="@+id/themeColorPreview"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:background="#865EDC"
                            android:layout_marginTop="8dp" />

                    </LinearLayout>
                </ScrollView>

            </FrameLayout>
        </LinearLayout>
    </TabHost>

</LinearLayout>