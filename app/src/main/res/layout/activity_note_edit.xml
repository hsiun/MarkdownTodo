<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:paddingTop="0dp"
        android:paddingBottom="8dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#000000"
        app:title="编辑笔记"
        app:titleTextColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp"
        android:paddingTop="0dp"
        android:layout_marginTop="8dp">

        <!-- 查看模式的内容显示（可滚动，点击进入编辑，包含标题和内容） -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/noteContentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 标题显示 -->
                <TextView
                    android:id="@+id/noteTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 时间显示（查看模式） -->
                <TextView
                    android:id="@+id/noteTimeTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:paddingBottom="16dp"
                    android:clickable="true"
                    android:focusable="true" />

                <!-- 内容显示 -->
                <TextView
                    android:id="@+id/noteContentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp"
                    android:clickable="true"
                    android:focusable="true" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 编辑模式的容器（包含标题和内容，都在一个框内） -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/noteEditScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 编辑模式的标题输入 -->
                <EditText
                    android:id="@+id/noteTitleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="标题"
                    android:inputType="textCapSentences"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:background="@android:color/transparent"
                    android:paddingBottom="8dp"
                    android:maxLines="1" />

                <!-- 时间显示（编辑模式） -->
                <TextView
                    android:id="@+id/noteTimeEditTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="#999999"
                    android:paddingBottom="16dp" />

                <!-- 编辑模式的内容输入 -->
                <EditText
                    android:id="@+id/noteContentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="输入笔记内容（支持Markdown）"
                    android:inputType="textMultiLine"
                    android:gravity="top"
                    android:background="@android:color/transparent"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    android:minHeight="200dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- Markdown 快捷按钮区域 -->
        <LinearLayout
            android:id="@+id/markdownButtonsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <ImageButton
                android:id="@+id/btnBold"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="粗体"
                android:src="@drawable/ic_bold"
                app:tint="#FF9800"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnItalic"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="斜体"
                android:src="@drawable/ic_italic"
                app:tint="#FF9800"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnCode"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="代码"
                android:src="@drawable/ic_code"
                app:tint="#FF9800"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnLink"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="链接"
                android:src="@drawable/ic_link"
                app:tint="#FF9800"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnList"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="列表"
                android:src="@drawable/ic_list"
                app:tint="#FF9800"
                android:padding="8dp" />

            <ImageButton
                android:id="@+id/btnImage"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginStart="4dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:contentDescription="图片"
                android:src="@drawable/ic_image"
                app:tint="#FF9800"
                android:padding="8dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示：支持Markdown语法"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>


</LinearLayout>