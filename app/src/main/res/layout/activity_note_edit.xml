<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#FFFFFF"
        android:elevation="0dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="#000000"
        app:title="编辑笔记"
        app:titleTextColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 编辑模式的标题输入 -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/noteTitleInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="标题"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/noteTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textCapSentences"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内容"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone" />

        <!-- 查看模式的内容显示（可滚动，点击进入编辑，包含标题和内容） -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/noteContentScrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 标题显示 -->
                <TextView
                    android:id="@+id/noteTitleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:paddingBottom="16dp" />

                <!-- 内容显示 -->
                <TextView
                    android:id="@+id/noteContentTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <!-- 编辑模式的内容输入 -->
        <EditText
            android:id="@+id/noteContentEditText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:hint="输入笔记内容（支持Markdown）"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:background="@drawable/edittext_border"
            android:padding="12dp"
            android:scrollbars="vertical"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hintTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示：支持Markdown语法"
            android:textSize="12sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp"
            android:visibility="gone" />

    </LinearLayout>

    <!-- 底部按钮区域 -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#F5F5F5"
        android:padding="16dp"
        android:visibility="gone">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="#666666"
            android:background="@drawable/button_border"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="保存"
            android:textColor="#FFFFFF"
            android:backgroundTint="#865EDC"
            android:background="@drawable/button_rounded" />

    </LinearLayout>

</LinearLayout>