<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Git同步设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Git仓库地址"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/githubRepoUrlInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="https://github.com/username/repo"
            android:inputType="textUri" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Git Token"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="4dp" />

        <EditText
            android:id="@+id/githubTokenInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="输入你的Git Token"
            android:inputType="textPassword" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"
            android:layout_marginVertical="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同步设置"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 使用普通的 Switch 而不是 SwitchCompat -->
            <Switch
                android:id="@+id/autoSyncSwitch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="自动同步" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="同步间隔"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <SeekBar
            android:id="@+id/syncIntervalSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="59" />

        <TextView
            android:id="@+id/syncIntervalText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5 分钟"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>