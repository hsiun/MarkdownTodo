<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 标题（动态显示新增或编辑） -->
    <TextView
        android:id="@+id/dialogTitleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="新增待办"
        android:textSize="20sp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- 待办事项输入区域 -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/inputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        app:boxBackgroundColor="@android:color/transparent"
        app:boxStrokeColor="#E0E0E0"
        app:hintTextColor="#999999"
        app:endIconMode="clear_text"
        android:hint="输入待办事项内容"
        android:layout_marginBottom="16dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:maxLines="3"
            android:textSize="16sp"
            android:textColor="#333333" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 隐藏的ID字段（用于编辑时识别） -->
    <EditText
        android:id="@+id/todoIdInput"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- 提醒设置区域 -->
    <LinearLayout
        android:id="@+id/reminderContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_border_light"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提醒设置"
            android:textSize="14sp"
            android:textColor="#333333"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- 提醒时间选择 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提醒时间："
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/reminderTimeText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="点击选择时间"
                android:textSize="14sp"
                android:textColor="#1976D2"
                android:padding="12dp"
                android:background="?android:attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true" />

            <Button
                android:id="@+id/clearReminderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="清除"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                android:paddingHorizontal="12dp"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />

        </LinearLayout>

        <!-- 重复设置 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="重复："
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginEnd="8dp" />

            <Spinner
                android:id="@+id/repeatSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:entries="@array/repeat_options"
                android:backgroundTint="#1976D2" />

        </LinearLayout>

    </LinearLayout>

    <!-- 设置提醒和完成按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- 设置提醒复选框 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <CheckBox
                android:id="@+id/reminderCheckBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:buttonTint="#1A73E8" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置提醒"
                android:textSize="14sp"
                android:textColor="#333333" />

        </LinearLayout>

        <!-- 完成按钮 -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/completeButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="完成"
            android:textColor="#FFFFFF"
            app:backgroundTint="#1A73E8"
            app:cornerRadius="18dp" />

    </LinearLayout>

</LinearLayout>